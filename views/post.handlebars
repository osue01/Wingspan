<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wingspan</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">

  <meta charset="utf-8">

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<div class="card mb-3">
  <img class="card-img-top" src="{{image_url}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{bird_name}}</h5>
    <p class="card-text">{{description}}</p>
    <p class="card-text"><small class="text-muted">Seen by {{user.name}} on {{format_date date_created}} in 📍{{location}}</small></p>
  </div>
</div>

{{#if Comments.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each Comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5>{{comment.comment_text}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
    <form id="commentForm">
        <div class="input-field">
            <label>Comment:</label>
            <textarea type="text" id="comment-text" name="comment" rows="20" placeholder="Comment on this sighting"></textarea>
        </div>
        <input id="postId" type="hidden" name="id" value="{{id}}">
        <button type="submit">Add Comment</button>
    </form>

<script src="/js/comment.js"></script>
